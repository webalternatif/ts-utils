{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "jest",
    "@typescript-eslint"
  ],
  "rules": {
    "no-alert": "error",
    "no-console": "error",
    "jest/expect-expect":  [
      "warn",
      {
        "assertFunctionNames": ["expect", "expectType"],
        "additionalTestBlockFunctions": []
      }
    ]
  }
}
